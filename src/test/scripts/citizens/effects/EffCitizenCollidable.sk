test "make citizen collidable":
    spawn citizen named "test" at spawn of world "world"
    set {_npc} to last spawned npc
    make {_npc} collidable
    assert npc {_npc} is collidable with "was wrong"
    assert npc {_npc} is not collidable to fail with "was wrong"
    make {_npc} not collidable
    assert npc {_npc} is not collidable with "was wrong"
    assert npc {_npc} is collidable to fail with "was wrong"
    delete all citizens

test "make citizen collidable by fluids":
    spawn citizen named "test" at spawn of world "world"
